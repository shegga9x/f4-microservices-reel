<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="202506190001-1" author="jhipster">
        <comment>Load reel IDs from CSV</comment>

        <!-- Step 1: Create temp table -->
        <createTable tableName="temp_reel_ids">
            <column name="id" type="VARCHAR(36)" />
        </createTable>

        <!-- Step 2: Load CSV -->
        <loadData
            file="config/liquibase/reel_ids.csv"
            tableName="temp_reel_ids"
            separator=","
            encoding="UTF-8"
            />
        
        <!-- Step 3: Check the count (debug only) -->
        <sql>
            SELECT COUNT(*) AS count FROM temp_reel_ids;
        </sql>
    </changeSet>

</databaseChangeLog>